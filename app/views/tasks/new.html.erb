<div class= "container">
     <h1><strong>New Task</strong></h1>
    <%= form_for(@task) do |f| %>
        <%= f.label :title, "Ingresar titulo", class:"font-weight-bold mt-3"%>
        <%= f.text_field :title, class:"form-control" %>
        <%= f.label :details, "Ingresar detalles", class:"font-weight-bold mt-3"%>
        <%= f.text_field :details, class:"form-control" %>
        <%= f.submit class:"btn btn-primary mt-3" %>
    <% end %>
    <hr>
    <%= link_to 'Back to list', tasks_path %>
</div>
